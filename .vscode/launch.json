{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Make",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/zeta_debug.exe", // Path to your compiled executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
